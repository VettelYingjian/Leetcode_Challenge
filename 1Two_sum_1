public class Solution {
    public int[] twoSum(int[] nums, int target) {
        int[] res = new int[2];
	
    	if (nums == null || nums.length <2){
	    	return res;
	    }
	
	    Map<Integer, Integer> map = new HashMap<Integer, Integer>();
	
	    for(int i=0; i < nums.length; i++){
		    int t = target - nums[i];
		
		    if (map.containsKey(t)){
			    res[0]=map.get(t);
			    res[1]=i+1;
			    return res;
		    }else{
			    map.put(nums[i], i+1);
		    }
	    }
	    return res;
    }
}
